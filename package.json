    "release": "release-it -n"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/deepmerge": "^2.1.0",
    "@types/node": "^9.6.1",
    "bitbar-webpack-progress-plugin": "^1.0.0",
    "custom-tslint-formatters": "^2.3.0",
    "deepmerge": "^2.1.0",
    "origami-cms": "^0.0.6",
    "release-it": "^7.3.0",
    "ts-loader": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-origami": "^1.0.0",
    "typescript": "^2.7.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13"
  }
}
